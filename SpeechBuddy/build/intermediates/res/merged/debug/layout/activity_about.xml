<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:weightSum="1">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />


    <TextView
    android:text="@string/about_speech_buddy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/textView"
    android:textSize="@dimen/textsize30"
    android:textColor="@color/textColor"
    android:textAlignment="textStart"
    android:layout_marginTop="50dp"/>
    <TextView
        android:text="@string/by_arrested_developers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:textColor="@color/textColor"
        android:textAlignment="textStart"
        android:layout_marginTop="10dp"/>
    <TextView
        android:text="@string/william_anderson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="16dp"
        android:textColor="@color/textColor"
        android:textAlignment="textStart"
        android:layout_marginTop="10dp"/>
    <TextView
        android:text="@string/sanjay_jerad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="16dp"
        android:textColor="@color/textColor"
        android:textAlignment="textStart" />
    <TextView
        android:text="@string/kevin_dang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="16dp"
        android:textColor="@color/textColor"
        android:textAlignment="textStart"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
        android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="358dp"
                android:layout_height="232dp"
                android:text="@string/about"
                android:textSize="16dp"
                android:textColor="@color/textColor"
                android:layout_marginTop="60dp"
                android:layout_marginRight="60dp"
                android:layout_weight="0.02" />
    </LinearLayout>

